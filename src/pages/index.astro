---

import "@styles/global.scss";
import "@styles/reset.css";

import { Bio } from "@components/bio/Bio";
import { Header } from "@components/header/Header";
import { Music } from "@components/music/Music";
import { Store } from "@components/store/Store";
import { Videos } from "@components/videos/Videos";
const pageTitle = "Samantha Zul";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href={import.meta.env.BASE_URL +"/favicon.ico"} type="image/x-icon" />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <style>
      .full-height-image {
        height: 100vh;
        width: 100%;
        object-fit: cover;
        display: block;

        @media (max-width: 768px) {
          object-position: top; // For example, prioritize top of image on mobile
        }
      }
    </style>
  </head>
  <body>
    <Header client:idle />
    <img id="home" src={import.meta.env.BASE_URL +"images/ORBITA-11.jpg"} class="full-height-image"/>
    <Bio />
    <Music />
    <Videos />
    <Store />
  </body>


</html>
