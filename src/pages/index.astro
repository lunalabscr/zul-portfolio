---
import "@styles/global.scss";
import "@styles/reset.css";

import { Bio } from "@components/bio/Bio";
import { Header } from "@components/header/Header";
import { Music } from "@components/music/Music";
import { Store } from "@components/store/Store";
import { Videos } from "@components/videos/Videos";
import { Concerts } from "@components/concerts/Concerts";
import { Lavanda } from "@components/lavanda/Lavanda";
import { Contact } from "@components/contact/Contact";

// SEO Configuration
const siteTitle =
  "Samantha Zul - Artista Musical Costarricense | Costa Rica Artist";
const siteDescription =
  "Samantha Zul, artista musical interdisciplinaria de Costa Rica. Descubre su EP 'Órbita Plantae' y su universo sonoro único que conecta naturaleza y emociones humanas.";
const siteKeywords =
  "Samantha Zul, artista musical, Costa Rica, música costarricense, Órbita Plantae, artista interdisciplinaria, música independiente, cantautora, EP, álbum";
const siteUrl = "https://samanthazul.com"; // Replace with your actual domain
const imageUrl = `${siteUrl}/images/ORBITA-11.webp`;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />

    <!-- Basic SEO Meta Tags -->
    <title>{siteTitle}</title>
    <meta name="description" content={siteDescription} />
    <meta name="keywords" content={siteKeywords} />
    <meta name="author" content="Samantha Zul" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="Spanish" />
    <meta name="generator" content={Astro.generator} />

    <!-- Viewport and Mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#366529" />

    <!-- Canonical URL -->
    <link rel="canonical" href={siteUrl} />
    <!-- Defer the link below to aboid unused css -->
    <link
      rel="preload"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
      />
    </noscript>

    <!-- Favicons -->
    <link
      rel="icon"
      href={import.meta.env.BASE_URL + "favicon.ico"}
      type="image/x-icon"
    />
    <link
      rel="apple-touch-icon"
      href={import.meta.env.BASE_URL + "images/apple-touch-icon.png"}
    />

    <!-- Preload critical images -->
    <link
      rel="preload"
      as="image"
      href={import.meta.env.BASE_URL + "images/ORBITA-11-placeholder.webp"}
      fetchpriority="high"
    />
    <link
      rel="preload"
      as="image"
      href={import.meta.env.BASE_URL + "images/ORBITA-11-768.webp"}
      media="(max-width: 768px)"
    />
    <link
      rel="preload"
      as="image"
      href={import.meta.env.BASE_URL + "images/ORBITA-11-1200.webp"}
      media="(min-width: 769px)"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={siteDescription} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:site_name" content="Samantha Zul" />
    <meta property="og:locale" content="es_CR" />
    <meta property="og:locale:alternate" content="en_US" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={siteDescription} />
    <meta name="twitter:image" content={imageUrl} />
    <meta name="twitter:creator" content="@samanthazul" />

    <!-- Music Platform Meta -->
    <meta property="music:musician" content="Samantha Zul" />
    <meta property="music:album" content="Órbita Plantae" />
    <meta property="music:release_date" content="2025" />

    <!-- Geographic SEO -->
    <meta name="geo.region" content="CR" />
    <meta name="geo.country" content="Costa Rica" />
    <meta name="ICBM" content="9.7489, -83.7534" />
    <meta name="geo.position" content="9.7489;-83.7534" />

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "Person",
            "@id": "#samantha-zul",
            "name": "Samantha Zul",
            "alternateName": "Samantha",
            "description": "Artista musical interdisciplinaria de Costa Rica, cantautora y compositora del EP 'Órbita Plantae'",
            "nationality": "Costa Rica",
            "birthPlace": {
              "@type": "Country",
              "name": "Costa Rica"
            },
            "occupation": ["Musician", "Singer", "Songwriter", "Artist"],
            "genre": ["Indie", "Alternative", "Folk", "World Music"],
            "url": "https://samanthazul.com",
            "image": "https://samanthazul.com/images/ORBITA-11.webp",
            "sameAs": [
              "https://ilelubitas.bandcamp.com",
              "https://lechedecoco.bandcamp.com",
              "https://embed.music.apple.com/cr/album/órbita-plantae-ep/1808618082"
            ]
          },
          {
            "@type": "MusicAlbum",
            "@id": "#orbita-plantae",
            "name": "Órbita Plantae",
            "alternateName": "Orbita Plantae EP",
            "albumProductionType": "http://schema.org/StudioAlbum",
            "albumReleaseType": "http://schema.org/EPRelease",
            "datePublished": "2025",
            "genre": ["Indie", "Alternative", "Folk"],
            "byArtist": {
              "@id": "#samantha-zul"
            },
            "recordLabel": "Independent",
            "description": "EP debut de Samantha Zul que refleja su universo sonoro único conectando naturaleza y emociones humanas",
            "image": "https://samanthazul.com/images/ORBITA-42.webp",
            "url": "https://embed.music.apple.com/cr/album/órbita-plantae-ep/1808618082"
          },
          {
            "@type": "WebSite",
            "@id": "#website",
            "url": "https://samanthazul.com",
            "name": "Samantha Zul - Oficial",
            "description": "Sitio web oficial de Samantha Zul, artista musical de Costa Rica",
            "publisher": {
              "@id": "#samantha-zul"
            },
            "inLanguage": ["es-CR", "en-US"],
            "potentialAction": {
              "@type": "SearchAction",
              "target": "https://samanthazul.com/?s={search_term_string}",
              "query-input": "required name=search_term_string"
            }
          },
          {
            "@type": "Organization",
            "@id": "#organization",
            "name": "Samantha Zul Music",
            "url": "https://samanthazul.com",
            "logo": "https://samanthazul.com/images/logo.png",
            "foundingLocation": {
              "@type": "Country",
              "name": "Costa Rica"
            },
            "founder": {
              "@id": "#samantha-zul"
            },
            "sameAs": [
              "https://ilelubitas.bandcamp.com",
              "https://lechedecoco.bandcamp.com"
            ]
          }
        ]
      }
    </script>
    <style>
      .full-height-image {
        height: 100vh;
        width: 100%;
        object-fit: cover;
        display: block;

        @media (max-width: 768px) {
          object-position: top;
        }
      }
    </style>
  </head>
  <body>
    <Header client:load />

    <!-- Hero Section -->
    <main>
      <section id="home" aria-label="Samantha Zul - Artista Musical">
        <img
          class="full-height-image"
          src={import.meta.env.BASE_URL + "images/ORBITA-11.webp"}
          srcset={`
                ${import.meta.env.BASE_URL}images/ORBITA-11-480.webp 480w,
                ${import.meta.env.BASE_URL}images/ORBITA-11-768.webp 768w,
                ${import.meta.env.BASE_URL}images/ORBITA-11-1200.webp 1200w,
                ${import.meta.env.BASE_URL}images/ORBITA-11.webp 1920w
              `}
          sizes="(max-width: 768px) 100vw, 70vw"
          alt="Samantha Zul - Artista Musical de Costa Rica"
          loading="lazy"
          decoding="async"
        />
      </section>

      <Bio client:load />
      <Music client:idle />
      <Videos client:idle />
      <Store client:idle />
      <Concerts client:idle />
      <Lavanda client:idle />
    </main>

    <!-- Footer with additional SEO content -->
    <Contact client:idle />
  </body>
</html>
